pipeline
{
  agent any
  stages {
    stage("build") {
      steps
    {
        echo 'building the application....'
    }
  }
  
    stage("test") {
      steps
    {
        echo 'testing the application....'
    }
  }
    
     stage("security analysis") {
      steps
    {
        echo 'DAST and IAST are going on for the application....'
    }
  }

    stage("deploy") {
      steps
    {
        echo 'deploying the application....'
    }
   }
  }
}
